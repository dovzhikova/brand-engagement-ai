# Database
DATABASE_URL=postgresql://user:password@localhost:5432/carol_reddit_engagement

# Redis
REDIS_URL=redis://localhost:6379

# Authentication
JWT_SECRET=your-jwt-secret-min-32-characters-long
JWT_EXPIRES_IN=15m
REFRESH_TOKEN_EXPIRES_IN=7d

# Encryption (for OAuth tokens) - Generate with: openssl rand -hex 32
ENCRYPTION_KEY=your-32-byte-hex-key-here

# Reddit OAuth
REDDIT_CLIENT_ID=your-reddit-client-id
REDDIT_CLIENT_SECRET=your-reddit-client-secret
REDDIT_REDIRECT_URI=http://localhost:3000/api/accounts/oauth/callback
REDDIT_USER_AGENT=BrandEngagementAI/1.0

# AI Services (configure at least one)
OPENAI_API_KEY=sk-your-openai-api-key
ANTHROPIC_API_KEY=sk-ant-your-anthropic-api-key
GOOGLE_AI_API_KEY=your-google-ai-api-key
AI_PROVIDER=anthropic  # 'anthropic', 'openai', or 'google'
AI_MODEL=claude-sonnet-4-20250514  # see settings for available models

# Google OAuth for Search Console
# Create credentials at: https://console.cloud.google.com/apis/credentials
# Enable Search Console API at: https://console.cloud.google.com/apis/library/searchconsole.googleapis.com
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_REDIRECT_URI=http://localhost:3001/api/gsc/oauth/callback

# App
NODE_ENV=development
PORT=3001
FRONTEND_URL=http://localhost:3000
LOG_LEVEL=info
